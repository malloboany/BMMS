					"// Validate status code",
					"pm.test(\"Status code is valid\", function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204, 400, 401, 403, 404, 422, 500]);",
					"});",
					"",
					"// Validate Content-Type header",
					"pm.test(\"Content-Type is present and correct\", function () {",
					"    pm.response.to.have.header(\"Content-Type\");",
					"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.match(/application\\/(json|problem\\+json|octet-stream|pdf|xml|zip|x-www-form-urlencoded|vnd\\.api\\+json)/);",
					"});",
					"",
					"// Validate response body structure for JSON responses",
					"if (pm.response.headers.get(\"Content-Type\") && pm.response.headers.get(\"Content-Type\").includes(\"application/json\")) {",
					"    let jsonData;",
					"    try {",
					"        jsonData = pm.response.json();",
					"    } catch (e) {",
					"        jsonData = null;",
					"    }",
					"    pm.test(\"Response body is valid JSON\", function () {",
					"        pm.expect(jsonData).to.not.be.undefined;",
					"        pm.expect(jsonData).to.not.be.null;",
					"    });",
					"    ",
					"    // Check for common API response fields",
					"    pm.test(\"Response has success indicator\", function () {",
					"        pm.expect(jsonData).to.have.any.keys(\"success\", \"status\", \"code\");",
					"    });",
					"    pm.test(\"Response has message or error field\", function () {",
					"        pm.expect(jsonData).to.have.any.keys(\"message\", \"error\", \"errors\");",
					"    });",
					"    // If data is present, check its type",
					"    if (jsonData.hasOwnProperty(\"data\")) {",
					"        pm.test(\"Response has data field\", function () {",
					"            pm.expect(jsonData.data).to.not.be.undefined;",
					"        });",
					"        pm.test(\"Data field is object or array\", function () {",
					"            pm.expect([\"object\", \"array\"]).to.include(Array.isArray(jsonData.data) ? \"array\" : typeof jsonData.data);",
					"        });",
					"    }",
					"}",
